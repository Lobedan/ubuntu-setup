server {
    listen 80;
    server_name localhost;

    root /srv/www/site;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    error_page 405 =200 @405;

    location @405 {
        root /srv/www/site;
        proxy_pass http://localhost:4000;
    }

    include /etc/nginx/conf.d/*.conf;
}
